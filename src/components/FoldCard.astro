---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<a href={href} class='FoldCard'>
    <div class="FoldBack">
		<svg class="svgIcon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
			<path d="M7.5 3.375c0-1.036.84-1.875 1.875-1.875h.375a3.75 3.75 0 0 1 3.75 3.75v1.875C13.5 8.161 14.34 9 15.375 9h1.875A3.75 3.75 0 0 1 21 12.75v3.375C21 17.16 20.16 18 19.125 18h-9.75A1.875 1.875 0 0 1 7.5 16.125V3.375Z" />
			<path d="M15 5.25a5.23 5.23 0 0 0-1.279-3.434 9.768 9.768 0 0 1 6.963 6.963A5.23 5.23 0 0 0 17.25 7.5h-1.875A.375.375 0 0 1 15 7.125V5.25ZM4.875 6H6v10.125A3.375 3.375 0 0 0 9.375 19.5H16.5v1.125c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 0 1 3 20.625V7.875C3 6.839 3.84 6 4.875 6Z" />
		  </svg>
		  
	</div>
    <div class="paper"></div>
    <div class="FoldFront">
        <h2 class="title">{title}</h2>
	    <svg class="arrow" xmlns="http://www.w3.org/2000/svg" width="23.828" height="23.66"><path d="m11.817 18.021-6.161-6.083 6.179-6.262 1.579 1.579 2.828-2.828L11.817 0 0 11.976 11.835 23.66l4.405-4.405-2.828-2.828-1.595 1.594z"/><path d="M21.811 9.841h-.099l-2.884-2.884v2.884h-7.017v4h7.017v3.116l5-5-2.017-2.018v-.098z"/></svg>
	    {body? <p>{body}</p> :null}
    </div>
</a>

<style>
    .FoldCard {
        text-decoration: none;
        position: relative;
        display: flex;
        align-items: end;
        height: 200px;
    }
	.FoldFront {
        height: 80%;
        width: 100%;
		position: relative;
		height: min-content;
		display: grid;
		grid-template-columns: 1fr min-content;
        grid-template-rows: 100px;
		padding: 1rem;
		gap: 1rem;
		background-color: rgb(var(--accent));
		border-radius: var(--m-border-radius);
		color: white;
		transition: background-color 0.4s cubic-bezier(0.22, 1, 0.36, 1), transform 0.4s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.title {
		grid-column: 1/2;
		grid-row: 1/2;
		margin: 0;
		font-size: var(--t-big);
	}
	.arrow{
		grid-column: 2/3;
		grid-row: 1/2;
		justify-self: right;
		fill: rgb(var(--accent-light));
		transition: fill 0.4s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		font-size: var(--t-medium);
		grid-column: 1/3;
		grid-row: 2/3;
		font-weight: 300;
	}
    .FoldBack{
        width: 100%;
        height: 100%;
        border-radius: var(--m-border-radius);
        position: absolute;
        background-color: rgb(var(--accent-light));
        transition: transform 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    }
	.svgIcon{
		top: 10px;
		right: 10px;
		position: absolute;
		fill: rgb(var(--accent));
		height: 100px;
	}
    .paper{
        left: 10px;
        width: 80%;
        height: 60%;
        border-radius: 8px;
        position: absolute;
        background-color: rgba(255, 255, 255, 0.637);
        transition: transform .6s cubic-bezier(0.22, 1, 0.36, 1), height .4s cubic-bezier(0.22, 1, 0.36, 1);
    }
	.FoldCard:hover .FoldFront{
		background-color: rgb(var(--accent-dark));
        transform: rotateX(15deg) translate3d(4px, 8px, 0);
	}
	.FoldCard:hover .FoldBack{
		transform: rotateX(25deg) translate3d(-4px, -8px, 0);
	}
	.FoldCard:hover .paper{
        height: 80%;
		transform: rotate(-2deg);
	}
	.FoldCard:hover .arrow{
		fill: white;
        transform:rotateX(-15deg);
	}
</style>
